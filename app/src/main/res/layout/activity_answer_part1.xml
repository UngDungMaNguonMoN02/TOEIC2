<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_answer_part1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lengochoa.toeic.AnswerPart1">
    <TextView
        android:text="1/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnoq"
        android:textStyle="italic"
        android:textSize="13sp"
        android:layout_below="@+id/txtTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <ImageSwitcher
        android:layout_width="match_parent"
        android:id="@+id/imgswtch"
        android:layout_below="@+id/txtTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:layout_height="227dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgswtch"
        android:id="@+id/scrollView3"
        android:layout_marginTop="15dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radioGroup">
            <RadioButton
                android:id="@+id/rdba"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="A"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/rdbb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="B"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/rdbc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="C"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/rdbd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="D"
                android:textStyle="bold" />
        </RadioGroup>
    </ScrollView>

    <Button
        android:text=""
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/btnNext"
        android:drawableLeft="@android:drawable/ic_media_ff"
        android:layout_alignBaseline="@+id/txtnoq"
        android:layout_alignTop="@+id/txtnoq"
        android:layout_margin="40pt"/>

    <Button
        android:text=""
        android:layout_width="50dp"
        android:id="@+id/btnPre"
        android:drawableLeft="@android:drawable/ic_media_rew"
        android:layout_alignBaseline="@+id/txtnoq"
        android:layout_alignTop="@+id/txtnoq"
        android:layout_margin="17pt"
        android:layout_height="40dp" />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/videoView"
        android:layout_above="@+id/scrollView3" />


</RelativeLayout>
