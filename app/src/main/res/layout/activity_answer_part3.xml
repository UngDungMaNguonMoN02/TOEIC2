<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_answer_part3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lengochoa.toeic.AnswerPart3">


    <Button
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:id="@+id/btnNext"
        android:drawableRight="@android:drawable/ic_media_ff"
        android:drawableEnd="@android:drawable/ic_media_ff"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnPre"
        android:layout_toEndOf="@+id/btnPre" />

    <Button
        android:text="menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenu"
        android:visibility="visible"
        android:padding="5dp"
        android:layout_toRightOf="@+id/btnNext"
        android:layout_alignBottom="@+id/btnNext" />


    <SeekBar
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/btnMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/txtTimeAudio"
        android:layout_alignTop="@+id/seekBar"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="7dp"/>
    <Button
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:id="@+id/btnStart"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="@string/play"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/seekBar"
        android:layout_toRightOf="@+id/seekBar"
        android:layout_toEndOf="@+id/seekBar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtTimer"
        android:layout_marginTop="67dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtquestion1"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/radioGroup1">

                <RadioButton
                    android:id="@+id/rdba1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbb1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbc1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbd1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtquestion2"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="25dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/radioGroup2">

                <RadioButton
                    android:id="@+id/rdba2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbb2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbc2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbd2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtquestion3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="25dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/radioGroup3">

                <RadioButton
                    android:id="@+id/rdba3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbb3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbc3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rdbd3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="15sp" />

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <Button
        android:text=""
        android:layout_width="50dp"
        android:id="@+id/btnPre"
        android:drawableLeft="@android:drawable/ic_media_rew"
        android:drawableStart="@android:drawable/ic_media_rew"
        android:drawablePadding="8dp"
        android:layout_height="32dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
