<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_part1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.lengochoa.toeic.Part1">

    <TextView
        android:text="1/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnoq"
        android:textStyle="italic"
        android:textSize="13sp"
        android:layout_below="@+id/txtTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTimer"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:drawableStart="@android:drawable/ic_menu_recent_history"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageSwitcher
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:id="@+id/imgswtch"
        android:layout_below="@+id/txtTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/imgswtch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RadioButton
            android:id="@+id/rdba"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="A"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/rdbb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="B"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/rdbc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="C"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/rdbd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="D"
            android:textStyle="bold" />
    </RadioGroup>

</RelativeLayout>
