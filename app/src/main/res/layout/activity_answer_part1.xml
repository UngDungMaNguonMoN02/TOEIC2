<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_answer_part1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lengochoa.toeic.AnswerPart1">
    <TextView
        android:text="1/10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnoq"
        android:textStyle="italic"
        android:textSize="13sp"
        android:layout_below="@+id/txtTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgswtch"
        android:id="@+id/scrl"
        android:layout_marginTop="25dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radioGroup">
            <RadioButton
                android:id="@+id/rdba"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="A"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/rdbb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="B"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/rdbc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="C"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/rdbd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="D"
                android:textStyle="bold" />
        </RadioGroup>
    </ScrollView>

    <Button
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:id="@+id/btnNext"
        android:drawableRight="@android:drawable/ic_media_ff"
        android:drawableEnd="@android:drawable/ic_media_ff"
        android:layout_alignBaseline="@+id/txtnoq"
        android:layout_alignTop="@+id/txtnoq"
        android:layout_margin="40pt"
        android:gravity="center_horizontal" />

    <Button
        android:text=""
        android:layout_width="50dp"
        android:id="@+id/btnPre"
        android:drawableLeft="@android:drawable/ic_media_rew"
        android:drawableStart="@android:drawable/ic_media_rew"
        android:drawablePadding="8dp"
        android:layout_alignBaseline="@+id/txtnoq"
        android:layout_alignTop="@+id/txtnoq"
        android:layout_margin="17pt"
        android:layout_height="32dp"
        android:gravity="center_horizontal"/>

    <ImageSwitcher
        android:layout_width="match_parent"
        android:id="@+id/imgswtch"
        android:layout_height="227dp"
        android:layout_below="@+id/txtnoq"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

    <SeekBar
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/imgswtch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/txtTimeAudio"
        android:layout_alignTop="@+id/seekBar"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="7dp"/>

    <Button
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:id="@+id/btnStart"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="@string/play"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/seekBar"
        android:layout_toRightOf="@+id/seekBar"
        android:layout_toEndOf="@+id/seekBar" />

    <Button
        android:text="menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenu"
        android:layout_above="@+id/imgswtch"
        android:visibility="visible"
        android:layout_toRightOf="@+id/btnNext"
        android:padding="5dp"/>


</RelativeLayout>
