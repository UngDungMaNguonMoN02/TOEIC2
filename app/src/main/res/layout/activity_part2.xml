<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_part2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.lengochoa.toeic.Part2">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTimer"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:drawableStart="@android:drawable/ic_menu_recent_history"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/txtTimer"
        android:layout_toRightOf="@+id/txtquestion"
        android:layout_toEndOf="@+id/txtquestion"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp">
        <RadioButton
            android:id="@+id/rdba"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="A"
            android:textStyle="bold"/>
        <RadioButton
            android:id="@+id/rdbb"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="B"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
        <RadioButton
            android:id="@+id/rdbc"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="C"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
    </RadioGroup>

    <TextView
        android:text="11/40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtquestion"
        android:layout_marginTop="15dp"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Next Part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/btnNextPart" />


</RelativeLayout>
